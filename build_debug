#!/bin/bash

TypeBuild="debug"
case "$1" in
"")
    make -j4 -f GNUMakefile BUILD=$TypeBuild
    ;;

"clean")
    make -j4 -f GNUMakefile BUILD=$TypeBuild clean
    ;;

"exec")
    make -f GNUMakefile BUILD=$TypeBuild exec_test
    ;;

"leak")
    valgrind --leak-check=full --show-leak-kinds=all ./Debug/bin/test_FlameIDE
    ;;
"mingw32")
    make -j4 -f GNUMakefile CC=i686-w64-mingw32-g++ BUILD=$TypeBuild
    ;;
"mingw64")
    make -j4 -f GNUMakefile CC=x86_64-w64-mingw32-g++ BUILD=$TypeBuild
    ;;
esac
exit

